package hackerRank;
import java.util.Scanner;
public class arraycreation {
	public static void main(String args[]){
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		int k = in.nextInt();
		int x = in.nextInt();
		int r = n-2;
		//Calculate Combination - kcr = k!/ (r!*(k-1)!)
	//Calculating factorial 
		long comb=0;
		for (int i=1;i<=k;i++){			
			comb = (comb*i)/1000000007;
		}
		
		in.close();
	}
   	
}
