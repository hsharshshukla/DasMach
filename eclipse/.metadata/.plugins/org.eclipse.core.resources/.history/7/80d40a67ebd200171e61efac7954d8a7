package codechef;
import java.util.Scanner;
public class punish {
	public static void main(String args[]){
		Scanner in = new Scanner(System.in);
		int n = in.nextInt(),c=0,l=0;
		String a;
		for (int i=0;i<n;i++){
			a = in.next();
			for (int j=0;i<a.length();j++){
				if (a.charAt(j)=='>'){
					if(a.charAt(j+1)=='<'){
						c++;
						j = j+2;
					}
				}
			}
			System.out.println(c);	
		}
		
		
		
	}
}
